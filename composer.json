{
    "name": "peso/peso",
    "type": "library",
    "description": "A simple standalone currency converter based on the Peso framework",
    "keywords": ["currency", "currency rates", "currency converter", "peso", "phpeso"],
    "homepage": "https://phpeso.readthedocs.io/",
    "license": "MIT",
    "authors": [{
        "name": "Anton Smirnov",
        "role": "developer",
        "homepage": "https://sandfox.me/",
        "email": "sandfox+phpeso@sandfox.me"
    }],
    "support": {
        "issues": "https://github.com/phpeso/peso/issues",
        "source": "https://github.com/phpeso/peso",
        "docs": "https://phpeso.readthedocs.io/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Peso\\Peso\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Peso\\Peso\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.2",
        "arokettu/date": "^2.4",
        "peso/core": "^1.1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "psy/psysh": "*",
        "sandfox.dev/code-standard": "^1.2025.09.17",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^6.12"
    }
}
