{
    "name": "peso/peso",
    "type": "library",
    "license": "MIT",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Peso\\Peso\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Peso\\Peso\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.2",
        "arokettu/date": "^2.4",
        "peso/core": "^0.9 || ^0.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.2",
        "psy/psysh": "*",
        "sandfox.dev/code-standard": "^1.2025.05.07",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^6.12"
    }
}
